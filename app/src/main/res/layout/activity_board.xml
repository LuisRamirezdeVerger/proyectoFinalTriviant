<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/buttonStart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tile"
    android:background="@drawable/backboard">

    <ImageView
        android:id="@+id/board"
        android:layout_width="735dp"
        android:layout_height="424dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/board" />

    <ImageView
        android:id="@+id/card"
        android:layout_width="71dp"
        android:layout_height="95dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/iddle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/buttonCard"
        android:layout_width="91dp"
        android:layout_height="48dp"
        android:layout_marginBottom="10dp"
        android:clickable="true"
        android:contentDescription="buttoncard"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/boton" />

    <TextView
        android:id="@+id/pickText"
        android:layout_width="59dp"
        android:layout_height="21dp"
        android:gravity="center"
        android:text="@string/card"
        android:textColor="@color/white"
        android:textSize="8sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/buttonCard"
        app:layout_constraintEnd_toEndOf="@+id/buttonCard"
        app:layout_constraintStart_toStartOf="@+id/buttonCard"
        app:layout_constraintTop_toTopOf="@+id/buttonCard" />

    <ImageView
        android:id="@+id/charOrder"
        android:layout_width="662dp"
        android:layout_height="71dp"
        android:layout_marginStart="750dp"
        android:layout_marginBottom="380dp"
        android:rotationX="180"
        android:rotationY="180"
        android:src="@drawable/marcopersonajetwo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/backQuest"
        android:layout_width="1047dp"
        android:layout_height="634dp"
        android:src="@drawable/backgroundtwo"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/woodQuest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fondopreguntas"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/backQuest"
        app:layout_constraintEnd_toEndOf="@+id/backQuest"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/backQuest"
        app:layout_constraintTop_toTopOf="@+id/backQuest"
        app:layout_constraintVertical_bias="0.496" />

    <ImageView
        android:id="@+id/option1"
        android:layout_width="243dp"
        android:layout_height="54dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="150dp"
        android:clickable="true"
        android:contentDescription="question"
        android:focusable="true"
        android:src="@drawable/preguntaa"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/woodQuest"
        app:layout_constraintEnd_toEndOf="@+id/woodQuest"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/woodQuest"
        app:layout_constraintTop_toTopOf="@+id/woodQuest"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/option2"
        android:layout_width="265dp"
        android:layout_height="61dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="50dp"
        android:clickable="true"
        android:contentDescription="question"
        android:focusable="true"
        android:src="@drawable/preguntab"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/woodQuest"
        app:layout_constraintEnd_toEndOf="@+id/woodQuest"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/woodQuest"
        app:layout_constraintTop_toTopOf="@+id/woodQuest"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/option3"
        android:layout_width="224dp"
        android:layout_height="52dp"
        android:layout_marginStart="75dp"
        android:layout_marginBottom="50dp"
        android:clickable="true"
        android:contentDescription="question"
        android:focusable="true"
        android:src="@drawable/preguntac"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/woodQuest"
        app:layout_constraintEnd_toEndOf="@+id/woodQuest"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/woodQuest"
        app:layout_constraintTop_toTopOf="@+id/woodQuest"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/option4"
        android:layout_width="224dp"
        android:layout_height="52dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="50dp"
        android:clickable="true"
        android:contentDescription="question"
        android:focusable="true"
        android:src="@drawable/preguntad"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/woodQuest"
        app:layout_constraintEnd_toEndOf="@+id/woodQuest"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/woodQuest"
        app:layout_constraintTop_toTopOf="@+id/woodQuest"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/question"
        android:layout_width="485dp"
        android:layout_height="63dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="30dp"
        android:gravity="center"
        android:text="@string/quest"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/woodQuest"
        app:layout_constraintEnd_toEndOf="@+id/woodQuest"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/woodQuest"
        app:layout_constraintTop_toTopOf="@+id/woodQuest"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/answer1"
        android:layout_width="204dp"
        android:layout_height="44dp"
        android:layout_marginEnd="285dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:text="@string/answ"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/answer2"
        android:layout_width="204dp"
        android:layout_height="44dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="@string/answ"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/option2"
        app:layout_constraintEnd_toEndOf="@+id/option2"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/option2"
        app:layout_constraintTop_toTopOf="@+id/option2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/answer3"
        android:layout_width="204dp"
        android:layout_height="44dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="@string/answ"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/option3"
        app:layout_constraintEnd_toEndOf="@+id/option3"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="@+id/option3"
        app:layout_constraintTop_toTopOf="@+id/option3"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/answer4"
        android:layout_width="204dp"
        android:layout_height="44dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="@string/answ"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/option4"
        app:layout_constraintEnd_toEndOf="@+id/option4"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="@+id/option4"
        app:layout_constraintTop_toTopOf="@+id/option4"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/logoQuest"
        android:layout_width="46dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/entretenimiento"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/woodQuest"
        app:layout_constraintEnd_toEndOf="@+id/woodQuest"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintStart_toStartOf="@+id/woodQuest"
        app:layout_constraintTop_toTopOf="@+id/woodQuest"
        app:layout_constraintVertical_bias="0.071" />

    <ImageView
        android:id="@+id/result"
        android:layout_width="744dp"
        android:layout_height="388dp"
        android:src="@drawable/right"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/correctText"
        android:layout_width="204dp"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="@string/corr"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.419" />

    <TextView
        android:id="@+id/confirm"
        android:layout_width="90dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:contentDescription="question"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.765" />

    <ImageView
        android:id="@+id/chronometer"
        android:layout_width="194dp"
        android:layout_height="81dp"
        android:layout_marginStart="600dp"
        android:layout_marginBottom="300dp"
        android:src="@drawable/chrono"
        app:layout_constraintBottom_toBottomOf="@+id/woodQuest"
        app:layout_constraintEnd_toEndOf="@+id/woodQuest"
        app:layout_constraintStart_toStartOf="@+id/woodQuest"
        app:layout_constraintTop_toTopOf="@+id/woodQuest" />

    <TextView
        android:id="@+id/numbers"
        android:layout_width="204dp"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="@string/numbers"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/chronometer"
        app:layout_constraintEnd_toEndOf="@id/chronometer"
        app:layout_constraintStart_toStartOf="@id/chronometer"
        app:layout_constraintTop_toTopOf="@id/chronometer" />

</androidx.constraintlayout.widget.ConstraintLayout>

