<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CharSelect"
    android:background="@drawable/backchar">

    <ImageView
        android:id="@+id/back"
        android:layout_width="53dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:contentDescription="go back"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrowback" />

    <ImageView
        android:id="@+id/smart"
        android:layout_width="186dp"
        android:layout_height="279dp"
        android:layout_marginEnd="40dp"
        android:clickable="true"
        android:contentDescription="smart guy"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/friki" />

    <ImageView
        android:id="@+id/buff"
        android:layout_width="266dp"
        android:layout_height="257dp"
        android:layout_marginEnd="215dp"
        android:clickable="true"
        android:contentDescription="buff guy"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/buffman" />

    <ImageView
        android:id="@+id/wizzard"
        android:layout_width="258dp"
        android:layout_height="274dp"
        android:layout_marginStart="215dp"
        android:clickable="true"
        android:contentDescription="wizzard"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/wizzard" />

    <ImageView
        android:id="@+id/zombie"
        android:layout_width="232dp"
        android:layout_height="270dp"
        android:layout_marginStart="20dp"
        android:clickable="true"
        android:contentDescription="zombie"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/zombie" />

</androidx.constraintlayout.widget.ConstraintLayout>